<h1>Project Organizer</h1>

<h2>My Projects</h2>
<hr>

<% if (projects.length < 1) { %>
  <h4>Better get coding, I've no projects!</h4>
<% } %>

<% projects.forEach(function(project) { %>
  <div class="well project-card">
    <h2>
      <a class="proj-name" href="/projects/<%= project.id %>"><%= project.name %></a>
    </h2>

    <p class="desc">
      <%= project.description %>
    </p>

      <% project.categories.forEach((category, i) => { %>
        <a href='/categories/<%= category.name %>' class="btn btn-primary btn-sm">
          <%= category.name %>
        </a>
      <% }) %>
  </div>
<% }); %>
