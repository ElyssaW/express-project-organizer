<h1>Create a new project</h1>

<form action="/projects" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control new-proj" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="githubLink">Github Link</label>
    <input type="text" class="form-control new-proj" id="githubLink" name="githubLink" required>
  </div>

  <div class="form-group">
    <label for="deployedLink">Deployed Link</label>
    <input type="text" class="form-control new-proj" id="deployedLink" name="deployedLink" required>
  </div>

  <div class="form-group">
    <label for="categories">Categories (Separate by comma)</label>
    <input type="text" class="form-control new-proj" id="categories" name="categories" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control new-proj" id="description" name="description" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
