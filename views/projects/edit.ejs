<h1>Edit <%= project.name %></h1>

<form action="/projects/<%= project.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" value="<%= project.name %>" class="form-control" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="githubLink">Github Link</label>
    <input type="text" value="<%= project.githubLink %>" class="form-control" id="githubLink" name="githubLink" required>
  </div>

  <div class="form-group">
    <label for="deployedLink">Deployed Link</label>
    <input type="text" value="<%= project.deployLink %>" class="form-control" id="deployedLink" name="deployedLink" required>
  </div>

  <div class="form-group">
    <label for="categories">Categories (Separate by comma)</label>
    <input type="text" value="<% project.categories.forEach (category => { %><%=category.name %>, <% }) %>" class="form-control" id="categories" name="categories" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control" id="description" name="description" required><%= project.description %></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
